<resources>
    <style name="Theme.Nutrition" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="AppTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleTextAppearance" parent="AppTextAppearance">
        <item name="android:fontFamily">@font/open_sans_extra_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="ValueTextAppearance" parent="AppTextAppearance">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="RegularTextAppearance" parent="AppTextAppearance">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="TimeTextAppearance" parent="AppTextAppearance" >
        <item name="android:textSize">10sp</item>
        <item name="android:textFontWeight">400</item>
    </style>
</resources>